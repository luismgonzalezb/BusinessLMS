@model BusinessLMS.Models.GoalProgress
<div class="metro-container-300">
    @using (Html.BeginForm("AddProgressAjax", "Progress", FormMethod.Post, new { @class = "metro-form", id = "current_form" }))
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend></legend>
            <div class="metro-form-control">
                @Html.LabelFor(model => model.progress)
                <div class="metro-text-box">
                    @Html.EditorFor(model => model.progress)
                    @Html.ValidationMessageFor(model => model.progress)
                </div>
            </div>
            @Html.HiddenFor(model => model.progressId)
            @Html.HiddenFor(model => model.goalId)
            @Html.HiddenFor(model => model.datetime)
            <div class="metro-align-right">
                <input type="button" value="@TextResources.Businesslms.Cancel" class="metro-button" onclick="CancelProgress();" />
                <input type="button" value="@TextResources.Businesslms.Create" class="metro-button" onclick="submitform(this.form);" />
            </div>
        </fieldset>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#current_form");
    });
</script>