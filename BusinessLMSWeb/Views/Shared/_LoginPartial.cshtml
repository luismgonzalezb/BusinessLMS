@if (Request.IsAuthenticated) {
	<div class="profile">
		<a href="#" class="section">
			<img class="image" src="@ViewBag.IBOPicture" alt="image description" width="32" height="32" />
			<span class="text-box">
				@TextResources.Businesslms.Welcome
				<strong class="name">@ViewBag.IBOName</strong>
			</span>
		</a>
		<a href="#" class="opener">opener</a>
		<ul>
			<li>@Html.ActionLink(TextResources.Businesslms.ProfileIBO, "Update", "IBO")</li>
			<li>@Html.ActionLink(TextResources.Businesslms.ProfileUser, "Manage", "Account")</li>
		</ul>
	</div> 
	<span class="logout-btn">
		@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
			@Html.AntiForgeryToken()
			<a href="javascript:document.getElementById('logoutForm').submit()" class="btn-on">Log off</a>
		}
	</span>  
} 
